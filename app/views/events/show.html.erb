<div class="container">
  <div class="image-card">
    <%= link_to  add_to_favourites_event_favourite_path(@event) do%>
      <% if @favourite.nil? %>
        <i class="fa-regular fa-circle fa-2xl"></i>
        <% else %>
         <i class="fa-solid fa-circle fa-2xl"></i>
      <% end %>
    <% end %>
    <div class="image-card-text">
    <h1><strong><%= @event.name %></strong></h1>
    <p><%= @event.location %></p>
    </div>
    <div class="image-event">
      <% @event.photos.each do |photo| %>
       <%= cl_image_tag photo.key, height: 390, width: 390, crop: :fill %>
      <% end %>
    </div>
    <div class="text-information">

    </div>
  </div>
  <div class="lower-container">
    <%= render "bookings/button_new", event: @event  %>
    <div class="event-info pad12 box06403">
     <h2 class="information">Information</h2>
     <p><%= @event.url %></p>
     <p>Â£<%= @event.price_per_person %> price per person.</p>
     <p><%= @event.description %></p>
    </div>
    <%# <h2>Reviews</h2> %>
    <%# <div class="event-review box06403 mar10"> %>
    <%# </div> %>
  </div>
</div>
